<div class="row">
  <div class="col-md-12">
    <p>Name: {{model.name}}</p>
    <p>Artist: {{#link-to 'artist' model.artist_id}}{{model.artist_id.name}}{{/link-to}}</p>
    <p>Year: {{model.year}}</p>
    <p>total sold: {{model.total_sold}}</p>
  </div>

  <div class="col-md-12">
    <h3 class="text-center">Add comment</h3>
    <form>
      <div class="form-group">
        <label>Name</label>
        {{input type="text" class="form-control" value=author placeholder="Enter your name..."}}
      </div>
      <div class="form-group">
        <label>Comment</label>
        {{textarea type="text" class="form-control" value=message placeholder="Leave a comment..."}}
      </div>
      <button class="btn btn-primary" {{action 'add_comment' model}}>Submit</button>
    </form>
  </div>

  <div class="col-md-12">
    <h3 class="text-center">Comments</h3>
    <ul>
      {{#each model.comment_ids as |comment|}}
        <li class="list-group-item">
          <h4>Author: {{comment.author}}</h4>
          <p>Message:</p>
          <p>{{comment.message}}</p>
          <button class="btn btn-primary" {{action 'delete_comment' comment}}>Delete</button>
        </li>
      {{/each}}
    </ul>
  </div>
</div>