<div class="row">
  <div class="col-md-6">
    <h3>Aritst - {{model.name}}</h3>
    <p>based in: {{model.based_in}}</p>
    <p>founding year: {{model.founding_year}}</p>
  </div>

  <div class="col-md-6">
    <h3 class="text-center">Albums</h3>
    <ul>
      {{#each model.album_ids as |album|}}
        <li class="list-group-item">
          {{#link-to 'album' album}}{{album.name}}{{/link-to}}
          <p>Albums sold: {{album.total_sold}}</p>
        </li>
      {{/each}}
    </ul>
  </div>
</div>